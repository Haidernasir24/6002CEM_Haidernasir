<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp.Views.SignUpPage"
             xmlns:vm="clr-namespace:ChatApp.ViewModels"
             x:DataType="vm:SignUpViewModel"
             Title="Sign Up">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            <Entry Placeholder="Name" Text="{Binding DisplayName}" />
            <Entry Placeholder="Email" Keyboard="Email" Text="{Binding Email}" />
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
            <Entry Placeholder="Repeat Password" IsPassword="True" Text="{Binding RepeatPassword}" />
            <Button Text="Sign Up" Command="{Binding SignUpCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
